<div class="items-registration-contents">
  <header class="items-registration-header">

  </header>
  <div class="items-registration-main">
    <h2 class="items-registration-title">備品の情報を入力</h2>
    <%= form_with model: @item, local: true do |f| %>

    <%# <%= render 'shared/error_messages', model: f.object %> %>

    <div class="img-upload">
      <div class="weight-bold-text">
        備品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <div class="new-items">
      <div class="weight-bold-text">
        備品名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"items-text", id:"item-name", placeholder:"備品名（必須 40文字まで)", maxlength:"40" %>
    </div>

    <div class="items-detail">
      <div class="weight-bold-text">備品の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>

        <div class="items-explain">
          <div class="weight-bold-text">
            備品の説明
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :detail, class:"items-text", id:"item-info", placeholder:"備品の説明（必須）（性能、注意点など）例）。" ,rows:"1" ,maxlength:"100" %>
        </div>        
        
        <div class="weight-bold-text">
          備品の保存場所
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:location_id, Location.all, :id, :name, {}, {class:"select-box", id:"item-location"}) %>
        
        <div class="weight-bold-text">
          備品の管理部門
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:department_id, Department.all, :id, :name, {}, {class:"select-box", id:"item-department"}) %>
        
        <div class="weight-bold-text">
          備品の管理者
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:member_id, Member.all, :id, :name, {}, {class:"select-box", id:"item-member"}) %>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">購入日</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-purchase-wrap'>
            <%= raw sprintf(
                        f.date_select(
                          :purchaseday,
                          class:'select-purchase',
                          id:"purchase-date",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: (Time.now.year - 10),
                          end_year: (Time.now.year - 0),
                          date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
          <p class='info-text'>※ 備品情報は正しく入力してください。</p>
        </div>
      </div>
    </div>

    <div class="registration-btn-contents">
      <%= f.submit "登録する" ,class:"registration-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>

  <footer class="items-registration-footer">

  </footer>
</div>