<%= render "shared/second-header" %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card newsession-login">
        <div class="card-body">
          <P class="newsession-title">ログイン</P>
          <form action="">
            <div class="form-group">
              <label for="email">メールアドレス</label>
              <input type="text" name="email" id="email" class="form-control">
            </div>
            <div class="form-group">
              <label for="password">パスワード</label>
              <input type="password" name="password" id="password" class="form-control">
            </div>
            <button class="btn btn-primary w-100">ログイン</button>
            <div class="login__reminder">
              <%= link_to "パスワードをお忘れの方", new_password_path(resource_name), class: 'login__reminder-a' %>
            </div>
          </form>
        <div>
      <div>
    </div>
  </div>
</div>
